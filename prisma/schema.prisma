model Usuario {
   id String @id @default(auto()) @map("_id") @db.ObjectId
   email String @unique
   password String
   name String?
   
}

model Participante {
   id String @id @default(auto()) @map("_id") @db.ObjectId
   username String
   email String @unique
   avatar String?
}

model Sorteo {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  name String
  description String
  startDate DateTime
  status Boolean @default(false)
  image String
  createdAt DateTime @default(now())
}

